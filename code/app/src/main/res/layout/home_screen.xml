<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A191E"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_screen_qreate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:text="Qreate"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/home_screen_empty_profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/home_screen_qreate_title"
        android:src="@drawable/empty_profile_pic"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/home_screen_welcome_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_screen_empty_profile_pic"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="Welcome User"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/home_screen_phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_screen_welcome_user_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"
        android:text="Phone Number" />

    <TextView
        android:id="@+id/home_screen_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_screen_phone_number_text"
        android:layout_marginTop="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"
        android:text="example@yahoo.com" />
    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_button"
        android:text="Update Profile +"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="46dp">
    </Button>

    <Button
        android:id="@+id/logout_button_attendee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CD2020"
        android:text="Logout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp">
    </Button>


</LinearLayout>