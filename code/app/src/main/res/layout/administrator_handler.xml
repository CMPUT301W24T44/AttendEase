<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/administrator_handler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A191E">

    <FrameLayout
        android:id="@+id/administrator_handler_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/administrator_handler_navigation_bar"
        android:layout_marginBottom="10dp">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/administrator_handler_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/bottom_menu_background"
        android:elevation="2dp"
        app:itemIconSize="43dp"
        android:visibility="visible"
        app:itemIconTint="@color/bottom_menu_selector"
        app:menu="@menu/administrator_bottom_menu" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/administrator_view_details_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/bottom_menu_background"
        android:elevation="2dp"
        app:itemIconSize="43dp"
        android:visibility="invisible"
        app:itemIconTint="@color/bottom_menu_selector">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_view_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="180dp"
            android:background="@android:color/transparent"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>