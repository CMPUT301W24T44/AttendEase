<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A191E">

    <RelativeLayout
        android:id="@+id/send_notifications_screen_top_bar"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/send_notifications_screen_backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/send_notifications_screen_image"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/send_notifications_screen_top_bar"
        android:layout_marginTop="20dp"
        android:src="@drawable/organizernotificationart" />

    <Spinner
        android:id="@+id/send_notifications_screen_spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/send_notifications_screen_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_dark_blue" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_notifications_screen_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_dark_blue"
        android:radius="20dp">

        <TextView
            android:id="@+id/send_notifications_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Send Notification"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/send_notifications_screen_text_box"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="#E5E5E5"
            android:layout_below="@id/send_notifications_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="Add Text"
            android:inputType="text"
            android:autofillHints="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_notifications_screen_condirmbutton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/send_notifications_screen_text_box"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_blue_buttons"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />



    </RelativeLayout>



</RelativeLayout>