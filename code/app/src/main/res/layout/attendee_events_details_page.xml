<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A191E"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_action_bar_event_details_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_details_screen_qreate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/geolocation_menu_screen_profile_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_shape"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/profileicon"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/announcements_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Event Details"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_gravity="center"/>



</LinearLayout>