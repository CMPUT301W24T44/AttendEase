<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A191E">

    <RelativeLayout
        android:id="@+id/attendee_signup_list_screen_top_bar"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/attendee_signup_list_screen_backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/attendee_signup_list_screen_image"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/attendee_signup_list_screen_top_bar"
        android:layout_marginTop="20dp"
        android:src="@drawable/organizerattendeeart" />

    <ListView
        android:id="@+id/attendee_signup_list_screen_eventlist"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/attendee_signup_list_screen_image"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
