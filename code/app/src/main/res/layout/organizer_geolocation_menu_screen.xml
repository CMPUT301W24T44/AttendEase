<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/organizer_geolocation_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A191E">

    <RelativeLayout
        android:id="@+id/geolocation_menu_screen_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/geolocation_menu_screen_qreate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/geolocation_menu_screen_profile_button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:background="@color/black"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/empty_profile_pic"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/geolocation_menu_screen_image"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/geolocation_menu_screen_top_bar"
        android:layout_marginTop="20dp"
        android:src="@drawable/organizermapart" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/geolocation_menu_screen_see_attendee_checkins"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/geolocation_menu_screen_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_dark_blue"
        android:text="See Attendee Checkins"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />





</RelativeLayout>