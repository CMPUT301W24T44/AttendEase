<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A191E">

    <RelativeLayout
        android:id="@+id/qr_menu_screen_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/qr_menu_screen_qreate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/qr_menu_screen_profile_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_shape"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/profileicon" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/qr_menu_screen_image"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/qr_menu_screen_top_bar"
        android:layout_marginTop="20dp"
        android:src="@drawable/qrgeneratorart" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_menu_screen_button_generate_qr_code"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/qr_menu_screen_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_dark_blue"
        android:text="Generate QR-code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_menu_screen_button_reuse_qr_code"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/qr_menu_screen_button_generate_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_dark_blue"
        android:text="Reuse existing QR-code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_menu_screen_button_event_list"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/qr_menu_screen_button_reuse_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_dark_blue"
        android:text="Event List"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_menu_screen_button_share_qr_code"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/qr_menu_screen_button_event_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_dark_blue"
        android:text="Share QR-code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />





</RelativeLayout>