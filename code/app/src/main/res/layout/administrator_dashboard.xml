<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A191E">

    <RelativeLayout
        android:id="@+id/admin_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000">

        <TextView
            android:id="@+id/qreate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="cursive"
            android:text="Qreate"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/dashboard"
        android:layout_marginTop="85dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="35sp"/>

    <LinearLayout
        android:id="@+id/administrator_top_bar"
        android:layout_width="370dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/yellow_background_bubble"
        android:elevation="2dp">

        <Button
            android:id="@+id/events"
            android:layout_width="118dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/zxing_transparent"
            android:padding="0dp"
            android:state_selected="true"
            android:text="Events"
            android:textSize="17sp" />

        <Button
            android:id="@+id/profiles"
            android:layout_width="118dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/zxing_transparent"
            android:padding="0dp"
            android:state_selected="true"
            android:text="Profiles"
            android:textSize="17sp" />

        <Button
            android:id="@+id/images"
            android:layout_width="118dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/zxing_transparent"
            android:padding="0dp"
            android:text="Images"
            android:textSize="17sp" />

    </LinearLayout>



    <FrameLayout
        android:id="@+id/administrator_dashboard_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_dark_blue">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </FrameLayout>

</RelativeLayout>
